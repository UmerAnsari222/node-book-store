<h2 class="page-header">Search Authors</h2>

<form action="/authors" method="GET">
    <div>
        <label for="name">Name</label>
        <input class="search" type="text" name="name" value="<%= searchOptions.name %>">
    </div>

    <button class="btn btn-primary" type="submit">Search</button>
</form>
<br>

<% authors.forEach(author=> {%>

    <div>
        <%=author.name%>
            <a href="/authors/<%= author.id %>">View</a>
            <a href="/authors/<%= author.id %>/edit">Edit</a>
            <%- include('../partials/deleteForm',{url:`/authors/${ author.id}`})%>

    </div>

    <% }) %>